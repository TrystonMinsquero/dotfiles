# This is the configuration file for Ghostty.
#

# navigate splits
keybind = ctrl+alt+k=goto_split:up
keybind = ctrl+alt+j=goto_split:down
keybind = ctrl+alt+l=goto_split:right
keybind = ctrl+alt+h=goto_split:left

keybind = ctrl+alt+up=goto_split:up
keybind = ctrl+alt+down=goto_split:down
keybind = ctrl+alt+right=goto_split:right
keybind = ctrl+alt+left=goto_split:left

# adjust split sizes
keybind = ctrl+alt+shift+k=resize_split:up,10
keybind = ctrl+alt+shift+j=resize_split:down,10
keybind = ctrl+alt+shift+l=resize_split:right,10
keybind = ctrl+alt+shift+h=resize_split:left,10

keybind = ctrl+alt+shift+up=resize_split:up,10
keybind = ctrl+alt+shift+down=resize_split:down,10
keybind = ctrl+alt+shift+right=resize_split:right,10
keybind = ctrl+alt+shift+left=resize_split:left,10

# Manage Splits
keybind = ctrl+alt+d=new_split:right

# Scrolling
keybind = ctrl+page_up=unbind
keybind = ctrl+page_down=unbind
keybind = page_up=unbind
keybind = page_down=unbind
keybind = shift+page_up=scroll_page_up
keybind = shift+page_down=scroll_page_down
keybind = page_up=scroll_page_lines:-25
keybind = page_down=scroll_page_lines:25

keybind = ctrl+alt+comma=reload_config
keybind = ctrl+alt+shift+comma=reload_config

keybind = ctrl+shift+d=unbind
